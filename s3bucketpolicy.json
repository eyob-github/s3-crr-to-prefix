{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowLambdaPutObject",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::xxxxxxxxx:role/crrs3lambda"
      },
      "Action": [
        "s3:PutObject",
        "s3:PutObjectAcl"
      ],
      "Resource": "arn:aws:s3:::replica-bucket-bucket/*"
    }
  ]
}
